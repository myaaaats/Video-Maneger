<% comments.each do |comment| %>
  <% if comment.id.present? %>
    <div class="box8">
      <div><h5><%= comment.content %></h5></div>
      <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
      <%= link_to '削除', video_comment_path(video.id, comment.id), remote: true, method: :delete, data: { confirm: '本当に削除していいですか？' }, class: "btn btn-default" %>
    </div>
  <% end %>
<% end %>
