<%= form_with(model: @video, local: true, url: choose_new_or_edit) do |form| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= @video.errors.count %>件のエラーがあります。</h2>
      <ul>
         <% @video.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
      </ul>
    </div>
  <% end %>

  <div class="video_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="video_url">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>
  <div class="video_status">
    <%= form.label :status %>
    <%= form.select :status, [["準備中", "準備中"], ["準備完了", "準備完了"], ["Youtube投稿済み", "Youtube投稿済み"]] %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to 'ビデオメモ一覧画面にもどる', videos_path %>
