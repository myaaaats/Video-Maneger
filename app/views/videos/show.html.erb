<div class="index">
  <h1>ビデオメモ詳細画面</h1>
  <div class="box">
    <div class="box-title"><%= @video.title %></div>
    <div><%= @video.url %></div>
    <div><%= image_tag 'status.png', :size => '16x16'%><%= @video.status %></div>
  </div>
  <div>
    <h2>コメント一覧</h2>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, video: @video } %>
    </div>
  </div>
  <%= render partial: 'comments/form', locals: { comment: @comment, video: @video } %>
  <div class="padding-20px">
    <%= link_to '編集', edit_video_path(@video), class: "btn btn-warning" %> |
    <%= link_to '戻る', videos_path, class: "btn btn-primary" %>
  </div>
  <p><%= link_to '新しく動画メモを投稿する', new_video_path, class: "btn btn-default" %></p>
  <p><%= link_to 'ビデオメモ一覧画面にもどる', videos_path, class: "btn btn-default" %></p>
</div>
