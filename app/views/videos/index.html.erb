<div class="index">
  <h1>動画一覧</h1>
    <% @videos.each do |video| %>
      <div class="box">
        <div class="box-title"><%= video.title %></div>
        <div><iframe src="<%= video.url %>" width="320" height="240"></iframe><div>
        <div><%= image_tag 'status.png', :size => '16x16'%><%= video.status %></div>
        <div>
          <p><%= link_to '詳細確認', video_path(video.id), class: "btn btn-primary" %></p>
          <p><%= link_to "編集する", edit_video_path(video.id), class: "btn btn-warning" %></p>
          <p><%= link_to '削除する', video_path(video.id), class: "btn btn-danger", method: :delete, data: { confirm: '本当に削除していいですか？' } %></p>
        </div>
      </div>
    <% end %>
    <%= paginate @videos %>
  <div class="new_botan">
    <%= link_to '新しく動画メモを投稿する', new_video_path, class: "btn btn-default" %>
  </div>
</div>
