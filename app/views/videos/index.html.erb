<%= stylesheet_link_tag "inside/videos", :media => "all" %>
<div class="index">
  <div class="row">
    <h1>動画一覧</h1>
    <div class="margin_top50 margin_bottom50">
      <% if params[:id] == "pre" %>
        <%= link_to 'ALL', videos_path, class: "sample btn" %>
        <%= link_to '準備中', video_path('pre'), class: "sample_select btn" %>
        <%= link_to '準備完了', video_path('pre_done'), class: "sample btn" %>
        <%= link_to 'Youtube投稿済み', video_path('posted'), class: "sample btn" %>
      <% elsif params[:id] == "pre_done" %>
        <%= link_to 'ALL', videos_path, class: "sample btn" %>
        <%= link_to '準備中', video_path('pre'), class: "sample btn" %>
        <%= link_to '準備完了', video_path('pre_done'), class: "sample_select btn" %>
        <%= link_to 'Youtube投稿済み', video_path('posted'), class: "sample btn" %>
      <% elsif params[:id] == "posted" %>
        <%= link_to 'ALL', videos_path, class: "sample btn" %>
        <%= link_to '準備中', video_path('pre'), class: "sample btn" %>
        <%= link_to '準備完了', video_path('pre_done'), class: "sample btn" %>
        <%= link_to 'Youtube投稿済み', video_path('posted'), class: "sample_select btn" %>
      <% else %>
        <%= link_to 'ALL', videos_path, class: "sample_select btn" %>
        <%= link_to '準備中', video_path('pre'), class: "sample btn" %>
        <%= link_to '準備完了', video_path('pre_done'), class: "sample btn" %>
        <%= link_to 'Youtube投稿済み', video_path('posted'), class: "sample btn" %>
      <% end %>
    </div>
    <% @videos.each do |video| %>
      <div class="col-md-4 col-xs-12">
        <div class="box">
          <div class="box-title">
            <%= video.status %>
            <iframe src="<%= video.url %>" width="320" height="240"></iframe>
            <div class="top_bottom">
              <span class="h4"><%= video.title %></span>
              <div class="float_right">
                <%= link_to image_tag("show.png", height: 22),video_path(video.id) %>
                <%= link_to image_tag("edit.png", height: 22),edit_video_path(video.id) %>
                <%= link_to image_tag("delete.png", height: 22), video_path(video.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @videos %>
  <div class="new_botan">
    <%= link_to '新しく動画メモを投稿する', new_video_path, class: "btn btn-default" %>
  </div>
</div>
